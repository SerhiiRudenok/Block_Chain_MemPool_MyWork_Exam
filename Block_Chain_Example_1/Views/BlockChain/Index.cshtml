@using Block_Chain_Example_1.Models.Contracts
@model IEnumerable<Block_Chain_Example_1.Models.Block>

@{
    ViewData["Title"] = "Index";
    
    var balances = ViewBag.Balances as Dictionary<string, decimal>;
    int? firstInvalidIndex = ViewBag.FirstInvalidIndex as int?;

    var nodeId = ViewBag.NodeId as string ?? "A";
    var nides = ViewBag.Nodes as List<string> ?? new List<string>();

	var lastBlockIndex = ViewBag.LastBlockIndex as int? ?? 0;

	var contracts = ViewBag.Contracts as Dictionary<string, ISmartContract> ?? new Dictionary<string, ISmartContract>();

    var stakingAddress = ViewBag.StakingAddress as string ?? string.Empty;
}

@{
    string bgColor = nodeId switch
    {
        "A" => "#d4edda", // зелений
        "B" => "#d1ecf1", // блакитний
        "C" => "#dedc66", // жовтий
        _ => "#ffffff"    // білий
    };
}

<div style="display:flex; flex-direction:row">
    <textarea id="privateKeyBox" rows="4">@ViewBag.PrivateKey</textarea>
    <textarea rows="4">Public key => @ViewBag.PublicKey</textarea>
    <div style="margin-left: 20px;">
        <h6>Valid Chain => @ViewBag.Valid</h6>
        <h6>Difficulty => @ViewBag.Difficulty</h6>
        <h6>Reward => @ViewBag.CurrentReward</h6>
    </div>
</div>
<input type="button" value="Копіювати ключ" onclick="copyPrivateKey()" />


<div style="background-color:@bgColor; padding:10px; border-radius:6px;">
    <form method="get" asp-action="Index" style="display: inline-block">
        <label>Поточний вузол:</label>
        <select name="nodeId">
            @foreach (var n in nides)
            {
                if (n == nodeId)
                {
                    <option selected="selected" value="@n">Node @n</option>
                }
                else
                {
                    <option value="@n">Node @n</option>
			        }
            }
        </select>
        <input type="submit" value="Переключити" />
    </form>
</div>


<hr />

<div style="display:flex; flex-direction:row; margin:20px">
    <form method="post" asp-action="DemoSetup" style="margin:20px">
        <input type="hidden" name="nodeId" value="@nodeId"/>
        <input type="submit" value="START DEMO" />
    </form>

    <form method="post" asp-action="MinePending" style="margin:20px" onsubmit="return disableMineButton()">
        <input type="hidden" name="nodeId" value="@nodeId" />
        <input type="text" name="privateKey" placeholder="Введіть приватний ключ" value="@ViewBag.PrivateKey" onkeydown="return event.key !== 'Enter';" />
        <input type="submit" value="START MINE" id="mineButton" />
    </form>

    <form method="post" asp-action="SetDifficulty" style="margin:20px">
        <input type="hidden" name="nodeId" value="@nodeId" />
        <input type="number" name="difficulty" step="1" min="1" max="10" placeholder="Difficulty" />
        <input type="submit" value="Задати" />
    </form>
</div>

<span id="miningStatus" style="margin-left:10px; font-weight:bold;"></span>

@* Результат розповсюдження останнього блоку серед нодів *@
@if (TempData["Info"] != null)
{
    <div style="background-color:@bgColor; padding:10px; margin-top:10px; border-radius:6px; border:1px solid #ccc;">
        @TempData["Info"]
    </div>
}

<hr />

@{
    var mempool = ViewBag.Mempool as List<Transaction>;
    var wallet = ViewBag.Wallets as List<Wallet>;
}

<div>
    <h3>Register Wallet</h3>
    <form method="post" asp-action="RegisterWallet">
        <input type="hidden" name="nodeId" value="@nodeId" />
        <input type="text" name="displayName" placeholder="Введіть ім'я власника гаманця" />
        <input type="text" name="publicKeyXml" placeholder="Введіть Public Key XML" />
        <input type="submit" value="Register Wallet" />
    </form>
</div>

<div>
    @if (wallet.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>CopyAddress</th>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>PublicKey</th>
                    <th>RegisteredAt</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var w in wallet)
                {
                    <tr>
                        <td>
                            @if (contracts != null && contracts.ContainsKey(w.Address))
                            {
                                <a href="javascript:void(0);" onclick="toggleContractInfo('@w.Address')">@w.Address</a>
                            }
                            else
                            { 
                                <button type="button" class="btn btn-link p-0" onclick="toggleWalletTx('@w.Address')">
                                    @w.Address
                                </button>
                            }
                        </td>
                        <td>
                            <input type="button" value="Copy addr" onclick="copyWalletAddress('@w.Address')" />
                        </td>
                        <td>
                            @if (contracts != null && contracts.ContainsKey(w.Address))
                            {
								<span style="color:green"> (Contract)</span><br />
                                <small>@contracts[w.Address].GetConfiguration()</small>
                            }
                            else
		                    {   
                                @w.DisplayName
                            }
                        </td>
                        @if (balances.ContainsKey(w.Address))
                        {
                            <td>@String.Format("{0:F5}", ViewBag.Balances[w.Address])</td>
						}
                        else
                        {
							<td>0</td>
						}
                        <td>@w.PublicKeyXml.Substring(0, 10)</td>
                        <td>@w.RegisteredAt.ToString("u")</td>
                    </tr>


                    // відображую транзакції, пов'язані з гаманцем
                    <tr id="walletTxRow-@w.Address" style="display:none;">
                        <td colspan="6">
                            @{
                                var relatedTxs = Model
                                .SelectMany(b => b.Transactions.Select(tx => new { tx, BlockIndex = b.Index }))
                                .Where(x => x.tx.FromAddress == w.Address || x.tx.ToAddress == w.Address)
                                .ToList();
                            }

                            @if (relatedTxs.Count > 0)
                            {
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>From</th>
                                            <th>To</th>
                                            <th>Amount</th>
                                            <th>Fee</th>
                                            <th>Note</th>
                                            <th>Confirmations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var tx in relatedTxs)
                                        {
                                            var isCoinbase = tx.tx.FromAddress == "COINBASE";
                                            var conf = lastBlockIndex - tx.BlockIndex;
                                            var confClass = conf < 6 ? "text-danger fw-bold" : "text-success fw-bold";
                                            <tr style="@(isCoinbase ? "background-color:#e6ffe6;" : "")">
                                                <td>@tx.tx.FromAddress</td>
                                                <td>@tx.tx.ToAddress</td>
                                                <td>@tx.tx.Amount.ToString("0.00000")</td>
                                                <td>@tx.tx.Fee</td>
                                                <td>@tx.tx.Note</td>
                                                <td>
                                                    @if (!isCoinbase)
                                                    {
                                                        <span class="@confClass">@conf</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>Транзакцій немає</p>
                            }
                        </td>
                    </tr>

                    // відображую транзакції, пов'язані з контрактом
                    @if (contracts != null && contracts.ContainsKey(w.Address))
                    {
                        <tr id="contractInfoRow-@w.Address" style="display:none;">
                            <td colspan="6">
                                @{
                                    var contract = contracts[w.Address];
                                    var blockIndex = Model.LastOrDefault()?.Index ?? 0;

                                    if (contract is PenaltyStakingContract penalty)
                                    {
                                        <table class="table table-bordered table-sm mt-3">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Адреса стейкера</th>
                                                    <th>Блок початку стейкінгу</th>
                                                    <th>Сума</th>
                                                    <th>Винагорода</th>
                                                    <th>Штраф</th>
                                                    <th>Доступно до виводу</th>
                                                    <th>Блоків минуло/залишилось</th>
                                                    <th>Статус виводу</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var staker in penalty.GetStakers())
                                                {
                                                    var stakerAmount = penalty.GetStakeAmount(staker);
                                                    var stakerStartBlock = penalty.GetStakeStartBlock(staker);
                                                    if (stakerStartBlock == -1)
                                                    {
                                                        continue;
                                                    }
                                                    var stakerReward = penalty.GetStakeInfo(staker, blockIndex);
                                                    var stakerPenalty = penalty.GetPenalty(staker, blockIndex);
                                                    var stakerWithdrawable = penalty.GetWithdrawableAmount(staker, blockIndex);
                                                    var blocksPassed = blockIndex - stakerStartBlock;
                                                    var blocksRemaining = (stakerStartBlock + penalty.LockPeriodInBlocks) - blockIndex;
                                                    if (blocksRemaining < 0) blocksRemaining = 0;

                                                    var stakerWithdrawStatusBlock = $"Минуло {blocksPassed} блоків. Залишилось {blocksRemaining} блоків до винагороди.";

                                                    var stakerWithdrawStatus = (blockIndex >= stakerStartBlock + penalty.LockPeriodInBlocks)
                                                    ? "✅ Без штрафу"
                                                    : $"⚠️ Зі штрафом {penalty._earlyPenaltyPercent * 100}% до блоку {stakerStartBlock + penalty.LockPeriodInBlocks}.";

                                                    var rowStyle = "background-color:#fff8e6;";
                                                    <tr style="@rowStyle">
                                                        <td>@(staker.Length > 20 ? staker.Substring(0, 20) + "..." : staker)</td>
                                                        <td>@stakerStartBlock</td>
                                                        <td>@stakerAmount.ToString("0.0000")</td>
                                                        <td>@stakerReward.ToString("0.0000")</td>
                                                        <td>@stakerPenalty.ToString("0.0000")</td>
                                                        <td>@stakerWithdrawable.ToString("0.0000")</td>
                                                        <td>@stakerWithdrawStatusBlock</td>
                                                        <td>@stakerWithdrawStatus</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Гаманців немає</p>
    }
</div>

<hr />
@if (!string.IsNullOrEmpty(stakingAddress))
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">📈 Penalty Staking</h4>
        </div>
        <div class="card-body">
            <p class="mb-1 text-muted">Адреса смарт-контракту для стейкінгу:</p>
            <code class="d-block mb-3">@stakingAddress</code>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">🔒 Покласти у стейкінг</h5>
                    <form method="post" asp-action="Stake" class="mb-4">
                        <input type="hidden" name="nodeId" value="@nodeId" />

                        <div class="mb-2">
                            <label class="form-label">From Address</label>
                            <input name="fromAddress" type="text" class="form-control" placeholder="From Address (ADDR...)" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Amount</label>
                            <input name="amount" type="number" step="0.01" class="form-control" placeholder="Amount" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Fee</label>
                            <input name="fee" type="number" step="0.01" class="form-control" placeholder="Fee" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Private Key</label>
                            <input name="privateKey" type="text" class="form-control" placeholder="Private Key" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">📥 Stake</button>
                    </form>
                </div>

                <div class="col-md-6">
                    <h5 class="text-warning">💸 Вивести зі стейкінгу</h5>
                    <form method="post" asp-action="WithdrawFromStake">
                        <input type="hidden" name="nodeId" value="@nodeId" />

                        <div class="mb-2">
                            <label class="form-label">Address (Одержувач)</label>
                            <input name="userAddress" type="text" class="form-control" placeholder="Address (ADDR...)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <input name="amount" type="number" step="0.01" class="form-control" placeholder="Amount" />
                        </div>

                        <button type="submit" class="btn btn-warning w-100">📤 Withdraw</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<hr />

<h3>Mem pool</h3>
